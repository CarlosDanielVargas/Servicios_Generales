<% case request.status
   when "pending" %>
      <%= link_to change_status_request_path(request), class: "form__button-toggle form__button--desktop" do %>
        <i class="bi bi-pencil-square"></i>&nbsp;Atender
      <% end %>

      <%= link_to change_status_request_path(request), class: "form__button-toggle form__button--mobile" do %>
        <i class="bi bi-pencil-square"></i>
      <% end %>

      <%= link_to edit_request_path(request), class: "form__button-close form__button--desktop", data: {controller:"alert", action: "alert#confirm"} do %>
        <i class="bi bi-x-square"></i>&nbsp;Rechazar
      <% end %>

      <%= link_to edit_request_path(request), class: "form__button-close form__button--mobile", data: {controller:"alert", action: "alert#confirm"} do %>
        <i class="bi bi-x-square"></i>
      <% end %>

<% when "in_process" %>
  <%= link_to edit_task_path(:request => request.id), class: "form__button-toggle form__button--desktop" do %>
    <i class="bi bi-pencil-square"></i>&nbsp;&nbsp;Seguimiento/Editar
  <% end %>
    
  <%= link_to edit_task_path(:request => request.id), class: "form__button-toggle form__button--mobile" do %>
    <i class="bi bi-pencil-square"></i>
  <% end %>
<% when "completed" %>
  <%= link_to edit_task_path(:request => request.id), class: "form__button-toggle form__button--desktop" do %>
    <i class="bi bi-arrow-clockwise"></i>&nbsp;Reabrir
  <% end %>

  <%= link_to edit_task_path(:request => request.id), class: "form__button-toggle form__button--mobile" do %>
    <i class="bi bi-arrow-clockwise"></i>
  <% end %>

  <%= link_to change_status_request_path(request, :change_to => "close"), class: "form__button-close form__button--desktop", data: {controller:"alert", action: "alert#confirm"} do %>
    <i class="bi bi-x-square"></i>&nbsp;Cerrar
  <% end %>

  <%= link_to change_status_request_path(request, :change_to => "close"), class: "form__button-close form__button--mobile", data: {controller:"alert", action: "alert#confirm"} do %>
    <i class="bi bi-x-square"></i>
  <% end %>
<% end %>
